# Binaries
COQ_MAKEFILE = coq_makefile
COQTOP = coqtop

DKFOLDER = /home/gaspi/github/dedukti/acu
DKCHECK = $(DKFOLDER)/dkcheck.native
DKDEP = $(DKFOLDER)/dkdep.native

# Contains the local test files that are not part of the stdlib
MAKEFILE_TEST = Makefile.test

DKS = $(wildcard *.dk)
DKOS = $(DKS:.dk=.dko)

.PHONY:	test compile export depend check clean Coq.dko
# Coq.dko is generated as a dependency by dkdep instead of ../dedukti/Coq.dko
# so we need to ignore it

.SUFFIXES: .dk .dko

# Because the [.dk] files are generated by make, the dependencies cannot be
#	precalculated, so we need to call make twice.
test: compile export depend
#	Call make again so that it include the updated depend file
	$(MAKE) check

# Debugging target
debug: compile export-debug depend
	$(MAKE) check-debug


# Compile the local [.v] files that are not part of the stdlib
compile:
	$(COQ_MAKEFILE) -f $(MAKEFILE_TEST) | make -f -

# Generate the [.dk] files by executing [Test.v]
export:
	$(COQTOP) -batch -debug -R ../src Coqine -R . Top -l Test
export-debug:
	$(COQTOP) -batch -debug -R ../src Coqine -R . Top -l Debug

# Check and compile the generated [.dk]
check: ../dedukti/Coq.dko $(DKOS)
check-debug: ../dedukti/Coq.dko Top__Debuglib.dko


# Generate the dependencies of [.dk] files
depend:
	$(DKDEP) -v *.dk ../dedukti/*.dk > .depend


../dedukti/Coq.dko:
	make -C .. dedukti/Coq.dko

.dk.dko: depend ../dedukti/Coq.dko
	$(DKCHECK) -I ../dedukti -e -nl -errors-in-snf $<

clean:
	$(COQ_MAKEFILE) -f $(MAKEFILE_TEST) | make -f - clean
	rm -rf *.dk *.dko .depend .*.aux *.vo

-include .depend

