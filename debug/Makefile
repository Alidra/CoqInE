# Variables
COQ_MAKEFILE ?= coq_makefile
COQTOP       ?= coqtop
DKCHECK      ?= dkcheck
DKDEP        ?= dkdep
VERBOSE      ?=

OUTFOLDER = out

DKS = $(wildcard $(OUTFOLDER)/*.dk)
DKOS = $(DKS:.dk=.dko)

.PHONY: all	test compile debug generate depend check clean GeoCoq

.SUFFIXES: .dk .dko

# Because the [.dk] files are generated by make, the dependencies cannot be
#	precalculated, so we need to call make twice.
all: compile generate depend
	make check  # Call make again so that it include the updated depend file
	rm CoqMakefile

GeoCoq:
	bash geocoq.sh

# Compile the local [.v] files that are not part of the stdlib
compile: GeoCoq CoqMakefile
	make -f CoqMakefile

$(OUTFOLDER):
	mkdir $(OUTFOLDER)

# Generate the [.dk] files by executing [Debug.v]
generate : compile $(OUTFOLDER)
	$(COQTOP) -batch -debug  -R ../src Coqine -R . Top -l Debug

# Generate the dependencies of [.dk] files
depend:
	$(DKDEP) -I $(OUTFOLDER) $(OUTFOLDER)/*.dk > .depend

# Check and compile the generated [.dk]
check: $(DKOS)

%.dko: %.dk depend
	$(DKCHECK) -I $(OUTFOLDER) -errors-in-snf -e -nl $<

clean: CoqMakefile
	make -f CoqMakefile - clean
	rm -rf $(OUTFOLDER) .depend .*.aux *.vo
	rm -f CoqMakefile
	rm -f debug.out

CoqMakefile: Make
	$(COQ_MAKEFILE) -f Make > CoqMakefile

-include .depend
